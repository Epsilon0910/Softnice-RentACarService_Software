        }

        .vendor-detail-fields {
            margin: 5px 0px;
        }
        .field-item {
            height: 26px;
        }
        .field-item select {
            width: 162px;
            height: 26px;
        }

        .car-table-wrapper {
            border: 1px solid black;
            border-bottom: 5px solid grey;
            width: 100%;
            display: inline-block;
            margin: 5px 0px;
        }

        .car-table {
            background-color: #e1dcd6;
            padding: 15px 10px;
            overflow-x: auto;
            width:100%;
        }

        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #ddd;
        }

        th, td {
            border: 1px solid grey;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }
        .color {
            color: red;
        }
