<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Login</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <!-- CSS -->

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:700" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/font-awesome.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/style.css">

    <!-- Js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/bootstrap.min.js"></script>
    <style>
        .login_section{
            width:500px;
        }
        .login_wrapper {
            margin-top:50px;
            margin-bottom:80px;
            border:1px solid lightgrey;
            border-radius:5px;
        }
        .login_title {
            padding: 5px 10px;
            border-bottom: 1px solid lightgrey;
            height: 45px;
            vertical-align: middle;
            background-color: #bab6ab;
        }
        .login_title p {
            margin: 0;
            vertical-align:middle;
        }
        .login_box{
            padding:20px 10px;
        }
        .form-group{
            margin-bottom:25px;
        }
        .form-group input{
            height:40px;
            width:100%;
        }
        .row{
            margin:0;
        }
        .css-checkbox {
            width: 15px;
            height: 15px;
        }
        #rememberme {
            font-size:17px;
            padding-left:0;
        }
        #submit_btn {
            padding-right: 0;
        } 
        #reset_password{
            text-align:center;
            margin-top:5px;
            margin-bottom:20px;
            font-size:15px;
            color:grey;
        }
        .custom-button {
            padding: 5px 25px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            background-color: #7c7a72;
            color: white;
            border: 2px solid #bab6ab;
            border-radius: 500px;
            letter-spacing: 1px;
            width: 100%;
        }
        .custom-button:hover {
            background-color: #e1dcd6;
            color: black;
        }
        .asterisc {
            color: red;
        }
    </style>
</head>
<body>
    <!-- Header Start -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- header Nav Start -->
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <img src="~/Content/mytemplate/img/logo.png" />
                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav navbar-right">
                                    <li>@Html.ActionLink("Filters", "Landing")</li>
                                    <li>@Html.ActionLink("Book a Car", "Book")</li>
                                    <li>@Html.ActionLink("Login", "Login")</li>
                                </ul>
                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->
                    </nav>
                </div>
            </div>
        </div>
    </header><!-- header close -->
    <!--ADMIN LOIGN SECTION-->
    <section class="login_section container">
        <div class="login_wrapper">
            <div class="login_title">
                <p><strong>ADMIN LOGIN</strong></p>
            </div>
            <div class="login_box">
                <form>
                    <div class="form-group ">
                        <input type="text" class="form-control" id="fname" placeholder="Username or email address">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="lname" placeholder="Password">
                        
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6" id="rememberme">
                            <label><input type="checkbox" class="css-checkbox">  Remember me</label>
                        </div>
                        <div class="col-xs-12 col-sm-6" id="submit_btn">
                            <button type="submit" class="btn btn-default custom-button" id="signin-btn">LOG IN</button>
                        </div>
                    </div>
                </form>
            </div>
            <div id="reset_password">
                <a href="#">Forgot your username or password?</a>
            </div>
        </div>
    </section>

    <!-- footer Start -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="footer-manu">

                    </div>
                    <p>Copyright &copy; Crafted by <a href="https://dcrazed.com/">SoftNice</a>.</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
