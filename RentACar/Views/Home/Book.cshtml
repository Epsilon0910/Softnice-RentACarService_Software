    </header><!-- header close -->
    <!-- contact form start -->

    <form name="customerform" novalidate>
        <section id="contact-form" class="container">
            <div class="section-header">
                Add Customer Details                 
                        <div class="navbar-form" role="search" style="display: unset; margin-left: 627px;" >
                            <div class="input-group add-on">
                                <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        </div>
                    
                
            </div>

            <div class="customer-detail-fields-wrapper">
                <div class="panel with-nav-tabs panel-default" style="padding: 15px;
    MARGIN-BOTTOM: 30px;">
                    <div class="panel-heading">

                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#bookdetails" data-toggle="tab">BASIC DETAILS</a></li>
                            <li><a href="#PaymentDetails" data-toggle="tab">PAYMENT DETAILS</a></li>
                         
                        </ul>


                    </div>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div class="tab-pane fade in active wraper-availability" id="bookdetails">



                                <div id="wraper-availability">
                                    @*<div class="for-header">
                                            DETAILS
                                        </div>*@
                                  
                                    <div class="availability-box" align="center">
                                        <div class="row row-fluid" style="margin-right: 5px;">
                                            <div class="col-sm-3 col-md-3">
                                                <label class="required-field">CUSTOMER NAME:</label>
                                            </div>
                                            <div class="col-sm-3 col-md-3 field-item">
                                                <input type="text" placeholder="" name="CustomerName" ng-model="CustomerDetail.CustomerName" required />
                                                <span ng-show="submitted == true && customerform.CustomerName.$error.required" class="color">Please fill</span>
                                            </div>
                                        </div><br />
                                        <div class="row row-fluid" style="margin-right: 5px;">
                                            <div class="col-sm-3 col-md-3">
                                                <label class="required-field">CUSTOMER EMAIL:</label>
                                            </div>
                                            <div class="col-sm-3 col-md-3 field-item">
                                                <input type="text" placeholder="" name="CustomerEmail" ng-model="CustomerDetail.CustomerEmail" required />
                                                <span ng-show="submitted == true && customerform.CustomerEmail.$error.required" class="color">Please fill</span>
                                            </div>
                                        </div><br />
                                        <div class="row-fluid">
                                            <div class="col-sm-3 col-md-3">
                                                <label class="required-field">PHONE NUMBER:</label>
                                            </div>
                                            <div class="col-sm-3 col-md-3 field-item">
                                                <select ng-model="CustomerDetail.CountrycodeList" ng-options="countrycodelist.ID as countrycodelist.Name for countrycodelist in CountrycodeList" name="CountryList" style="width:20%; color:green;" required>
                                                    <option value="">+91</option>
                                                </select>
                                                <input type="text" placeholder="" name="PhoneNumber" ng-model="CustomerDetail.PhoneNumber" required style="width:49%; font-size: 15px; color:green;" />
                                                <span ng-show="submitted == true && customerform.PhoneNumber.$error.required" class="color">Please fill</span>
                                            </div>
                                        </div><br><br><br />
                                        <div class="row-fluid">
                                            <div class="col-sm-3 col-md-3">
                                                <label class="required-field">ALTERNATE NUMBER:</label>
                                            </div>
                                            <div class="col-sm-3 col-md-3 field-item">
                                                <select ng-model="CustomerDetail.CountrycodeList" ng-options="countrycodelist.ID as countrycodelist.Name for countrycodelist in CountrycodeList" name="CountryList" style="width:20%; color:green;" required>
                                                    <option value="">+91</option>
                                                </select>
                                                <input type="text" placeholder="" name="PhoneNumber" ng-model="CustomerDetail.PhoneNumber" required style="width:49%; font-size: 15px; color:green;" />
                                                <span ng-show="submitted == true && customerform.PhoneNumber.$error.required" class="color">Please fill</span>
                                            </div>
                                        </div><br><br /><br />
                                        <div class="row-fluid">
                                            <div class="col-sm-3 col-md-3">
                                                <label class="required-field">CREATE DATE:</label>
                                            </div>
                                            <div class="col-sm-3 col-md-3 field-item">
                                                <input type="text" name="Date" ng-model="CustomerDetail.DateAdded" required>

                                                <span ng-show="submitted == true && customerform.Date.$error.required" class="color">Please fill</span>
                                            </div>
                                        </div>
                                        <div class="row-fluid" align="right">

                                            <input type="button" class="custom-button" value="SAVE" style="padding: 5px 25px;
            margin: 4px 2px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            background-color: #1db954;
            color: white;
            border: 2px solid #1db954;
            border-radius: 5px;
            letter-spacing: 1px;">
                                        </div>
                                        <div class="row row-fluid"><a href="">Customer History</a></div>
                                    </div>
                                            </div>
                                
                                </div>
                            

                            <div class="tab-pane fade" id="PaymentDetails">


                                <div class="availability-box" align="center">
                                    <div class="row row-fluid">
                                        <div class="col-sm-3 col-md-3">
                                            <label>DRIVING LICENSE NO:<span class="asterisc" style="color:red">*</span> :</label>
                                        </div>
                                        <div class="col-sm-3 col-md-3 field-item">
                                            <input type="text" placeholder="" />

                                        </div>

                                        <div class="col-sm-3 col-md-3">
                                            <label>COUNTRY</label>
                                        </div>
                                        <div class="col-sm-3 col-md-3 field-item">
                                            <select ng-model="CustomerDetail.Country" ng-options="countrylist.ID as countrylist.Name for countrylist in CountryList" name="CountryList" required>
                                                <option value="">--SELECT--</option>

                                            </select>
                                            <span ng-show="submitted == true && customerform.CountryList.$error.required" class="color">Please fill</span>
                                        </div>



                                    </div>



                                    <div class="row row-fluid">
                                        <div class="col-sm-3 col-md-3">
                                            <label>PASSPORT NUMBER :</label>
                                        </div>
                                        <div class="col-sm-3 col-md-3 field-item">
                                            <input type="text" placeholder="" />

                                        </div>


                                            <div class="row-fluid">
                                                <div class="col-sm-3 col-md-3">
                                                    <label class=" required-field">AMOUNT PAID</label>
                                                </div>
                                                <div class="col-sm-3 col-md-3 field-item">
                                                    <select ng-model="CustomerDetail.CourrencyList" ng-options="currencylist.ID as currencylist.Name for currencylist in CurrencyList" name="CurrencyList" style="width:23%; color:green;" required>
                                                        <option value="">$</option>
                                                    </select>
                                                    <input type="text" placeholder="" name="AmmountPaid" ng-model="CustomerDetail.AmmountPaid" required style="width:49%; font-size: 15px; color:green;" />
                                                    <span ng-show="submitted == true && customerform.AmmountPaid.$error.required" class="color">Please fill</span>
                                                </div>
                                            </div>
                                            <div class="row row-fluid">

                                                <div class="col-sm-3 col-md-3">
                                                    <label>PAYMENT TYPE :</label>
                                                </div>
                                                <div class="col-sm-3 col-md-3" style="MARGIN-LEFT: 46px;">
                                                    <div class="col-sm-4 col-md-4" style="padding:0;MARGIN-RIGHT: 18px;">
                                                        <label class="col-sm-6 col-md-6" style="padding:0;"> CARD :</label><input type="radio" class="col-sm-6 col-md-6" name="airbag-radio" />
                                                    </div>
                                                    <div class="col-sm-4 col-md-4" style="padding:0;">
                                                        <label class="col-sm-6 col-md-6" style="padding:0;">CASH:</label><input type="radio" class="col-sm-6 col-md-6" name="airbag-radio" />
                                                    </div>
                                                </div>
                                                <div class="col-sm-3 col-md-3" style="margin-left: -44px;
    margin-right: -16px;">
                                                <label class=" required-field">CREATE DATE:</label>
                                            </div>
                                            <div class="col-sm-3 col-md-3 field-item">
                                                <input type="date" name="Date" ng-model="CustomerDetail.DateAdded" style="    line-height: 23px;" required>

                                                <span ng-show="submitted == true && customerform.Date.$error.required" class="color">Please fill</span>
                                            </div>

                                        </div>
                                        <div class="row-fluid" align="right">

                                                @*"UNABLE TO FETCH  CLASS"*@
                                                <div class="upload-btn-wrapper" style="position:relative;
                                                     overflow: hidden;">
                                                    <button class="btn" style="color:white;
                                                            background-color:#1db954;
                                                            padding: 8px 20px;
                                                            border-radius: 8px;
                                                            font-size:15px;">
                                                        Upload a file
                                                    </button>
                                                    <input type="file" name="myfile" style="font-size :100px;
                                                           position :absolute;
                                                           left: 0;
                                                           top: 0;
                                                           opacity: 0;" />
                                                </div>
                                            

                                                    <input type="button" class="custom-button" value="SUBMIT" style="    padding: 5px 25px;
                                                                                margin: 4px 2px;
                                                                                text-align: center;
                                                                                font-size: 16px;
                                                                                cursor: pointer;
                                                                                background-color: #1db954;
                                                                                color: white;
                                                                                border: 2px solid #1db954;
                                                                                border-radius: 5px;
                                                                                letter-spacing: 1px;">
                                                
                                            </div>
                                                
                                            </div>

                                </div>
                            </div>




                        </div>
                    </div>
                </div>
            </div>
            </div>
        </section>
    </form>

    <!-- Call to action Start -->
    <section id="call-to-action">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <h2>We design delightful digital experiences.</h2>
