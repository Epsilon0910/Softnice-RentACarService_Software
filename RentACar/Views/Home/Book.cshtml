
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js" ng-app="rentapp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Rent a Car-Details</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <!-- CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/owl.carousel.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/font-awesome.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/style.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/ionicons.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/animate.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/responsive.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">


    <!-- Js -->
    <script src="@Url.Content("~/Content/mytemplate/")js/vendor/modernizr-2.6.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.10.2.min.js"><\/script>')</script>
    <script src="@Url.Content("~/Content/mytemplate/")js/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-route.js"></script>
    <!-- Google Map -->

    <style>
        body {
            font-family: "Open Sans Condensed", sans-serif;
            font-size: 14px;
            line-height: 1.42857143;
            color: black;
        }

        .wraper-availability {
            margin: auto;
            width: 100%;
            float: left;
            border: 1px solid white;
            border-radius: 5px;
        }

        .availability-box {
            background-color: #eeddff;
            padding: 82px;
            padding-top: 82px;
            padding-right: 82px;
            padding-bottom: 82px;
            padding-left: 82px;
            margin-top: -16px;
            margin-right: -16px;
            margin-left: -16px;
            margin-bottom: -18px;
            background-color: #eeddff;
            padding: 15px;
            overflow-x: auto;
        }

        .section-header {
            padding: 10px 10px;
            background-color: #1db954;
            color: white;
            font-weight: 500;
            margin-bottom: 15px;
            letter-spacing: 2px;
            font-size: 17px;
        }

        .for-header {
            padding: 5px 10px;
            background-color: lightgrey;
            font-weight: 400;
            letter-spacing: 1px;
            font-size: 15px;
        }

        .row-fluid {
            margin: 5px 0;
        }

            .row-fluid label {
                margin-right: -43px;
                letter-spacing: 0px;
                width: 179px;
                display: flex;
                MARGIN-LEFT: -5px;
            }

            .row-fluid select {
                width: 74%;
                height: 28px;
            }

            .row-fluid input[type=date] {
                width: 60%;
                height: 23px;
            }

        .customer-detail-fields-wrapper {
            border: 1px solid black;
            border-bottom: 5px solid grey;
            margin: 5px 0px;
            background-color: #e1dcd6;
        }

        .custom-button {
            padding: 5px 25px;
            margin: 4px 2px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            background-color: #1db954;
            color: white;
            border: 2px solid #1db954;
            border-radius: 5px;
            letter-spacing: 1px;
        }

            .custom-button:hover {
                background-color: #1db954;
                color: black;
            }

        .asterisc {
            color: red;
        }

        .add-on .input-group-btn > .btn {
            border-left-width: 0;
            left: -2px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        }
        /* stop the glowing blue shadow */
        .add-on .form-control:focus {
            box-shadow: none;
            -webkit-box-shadow: none;
            border-color: #cccccc;
        }

        #fileselector {
            margin: 10px;
        }

        #upload-file-selector {
            display: none;
        }

        .margin-correction {
            margin-right: 10px;
        }

        .form-control {
            width: 20%;
        }

        .navbar-nav > li > a {
            border-right: 1px solid #ddd;
            padding-bottom: 15px;
            padding-top: 15px;
        }

        .navbar-nav:last-child {
            border-right: 0;
        }

        .custom-button {
            padding: 5px 25px;
            margin: 4px 2px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            background-color: #1db954;
            color: white;
            border: 2px solid #1db954;
            border-radius: 5px;
            letter-spacing: 1px;
        }

        .customer {
            border-right: 5px solid #ddd;
            padding-bottom: 25px;
            padding-top: 25px;
            color: black;
        }

        input[type=file] {
            display: inline;
        }
    </style>
</head>
<body ng-controller="BookCtrl">
    <!-- Header Start -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- header Nav Start -->
                    <nav class="navbar navbar-default">

                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>


                                <img src="~/Content/mytemplate/img/logo.png" />

                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav navbar-right">
                                    <li>@Html.ActionLink("Works", "Landing")</li>
                                    <li>@Html.ActionLink("Book a Car", "Book")</li>
                                    <li>@Html.ActionLink("Logout", "Login")</li>
                                </ul>
                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->

                    </nav>
                </div>
            </div>
        </div>
    </header><!-- header close -->
    <!-- contact form start -->

    <section id="contact-form" class="container">
        <div class="customer" style="border: 5px solid #ddd;border-bottom:10px solid #ddd;
            padding: 25px;
            padding-top:unset;
            padding-bottom:35px;">
            <div class="section-header" style="margin-right: -25px; margin-left: -24px">
                Add Customer Details

                <div class="navbar-form" role="search" style="display: unset; margin-left: 627px;">
                    <div class="input-group add-on">
                        <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </div>


            </div>

            <form name="customerform" novalidate>
                <div class="customer-detail-fields-wrapper">
                    <div class="panel with-nav-tabs panel-default" style="padding: 15px; MARGIN-BOTTOM: 30px;">
                        <div class="panel-heading">

                            <ul class="nav nav-tabs">
                                <li class="active" id="bookdTab"><a href="#bookdetails" data-toggle="tab">BASIC DETAILS</a></li>
                                <li id="PaymentTab"><a href="#PaymentDetails" data-toggle="tab">PAYMENT DETAILS</a></li>

                            </ul>


                        </div>
                        <div class="panel-body">
                            <div class="tab-content">
                                <div class="tab-pane fade in active wraper-availability" id="bookdetails">



                                    <div id="wraper-availability">
                                        @*<div class="for-header">
                                                DETAILS
                                            </div>*@

                                        <div class="availability-box" align="center">
                                            <div class="row row-fluid" style="margin-right: 5px;">
                                                <div class="col-sm-3 col-md-3">
                                                    <label class="required-field">CUSTOMER NAME:<span class="asterisc" style="color:red">*</span> </label>
                                                </div>
                                                <div class="col-sm-3 col-md-3 field-item">
                                                    <input type="text" placeholder="" name="customername" ng-model="customername" required />
                                                    <span ng-show="submitted == true && customerform.customername.$error.required" class="color">Required</span>
                                                </div>
                                            </div><br />
                                            <div class="row row-fluid" style="margin-right: 5px;">
                                                <div class="col-sm-3 col-md-3">
                                                    <label class="required-field">CUSTOMER EMAIL:</label>
                                                </div>
                                                <div class="col-sm-3 col-md-3 field-item">
                                                    <input type="text" placeholder="" name="customeremail" ng-model="customeremail" required />
                                                    <span ng-show="submitted == true && customerform.customeremail.$error.required" class="color">Required</span>
                                                </div>
                                            </div><br />
                                            <div class="row-fluid">
                                                <div class="col-sm-3 col-md-3">
                                                    <label class="required-field">PHONE NUMBER:<span class="asterisc" style="color:red">*</span> </label>
                                                </div>
                                                <div class="col-sm-3 col-md-3 field-item">
                                                    <input type="text" placeholder="" name="Phonenumber" ng-model="Phonenumber" required style="width:80%; font-size: 15px; color:green;" />
                                                    <span ng-show="submitted == true && customerform.Phonenumber.$error.required" class="color">Required</span>
                                                </div>
                                            </div><br><br><br />
                                            <div class="row-fluid">
                                                <div class="col-sm-3 col-md-3">
                                                    <label class="required-field">ALTERNATE NUMBER:</label>
                                                </div>
                                                <div class="col-sm-3 col-md-3 field-item">
                                                    <input type="text" placeholder="" name="AlternatePhoneNumber" ng-model="CustomerDetail.AlternatePhoneNumber" required style="width:80%; font-size: 15px; color:green;" />
                                                    <span ng-show="submitted == true && customerform.AlternatePhoneNumber.$error.required" class="color">Required</span>
                                                </div>
                                            </div><br><br />

                                            <div class="row-fluid" align="right">

                                                <a href="#PaymentDetails" class="custom-button " ng-click="TabShow('PaymentDetails')" data-toggle="tab" style="padding: 5px 25px;
            margin: 4px 2px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            background-color: #1db954;
            color: white;
            border: 2px solid #1db954;
            border-radius: 5px;
            letter-spacing: 1px;">Next</a>

                                            </div><br />
                                            <div class="row row-fluid"><a href="">Existing Customer History</a></div>
                                        </div>
                                    </div>

                                </div>


                                <div class="tab-pane fade" id="PaymentDetails">


                                    <div class="availability-box" align="center">
                                        <div class="row row-fluid">
                                            <div class="col-sm-3 col-md-3">
                                                <label>DRIVING LICENSE NO:<span class="asterisc" style="color:red">*</span> :</label>
                                            </div>
                                            <div class="col-sm-3 col-md-3 field-item">
                                                <input type="text" placeholder="" name="Drivinglicense" ng-model="Drivinglicense" />
                                                <span ng-show="submitted == true && customerform.CountryList.$error.required" class="color">Required</span>
                                            </div>

                                            <div class="col-sm-3 col-md-3">
                                                <label>COUNTRY <span class="asterisc" style="color:red">*</span> </label>
                                            </div>
                                            <div class="col-sm-3 col-md-3 field-item">
                                                <select ng-model="CustomerDetail.Country" ng-options="Countries.NAME for Countries in Countrylist" name="CountryList" required>
                                                    <option value="">--SELECT--</option>

                                                </select>
                                                <span ng-show="submitted == true && customerform.CountryList.$error.required" class="color">Required</span>
                                            </div>



                                        </div>



                                        <div class="row row-fluid">
                                            <div class="col-sm-3 col-md-3">
                                                <label>PASSPORT NUMBER :</label>
                                            </div>
                                            <div class="col-sm-3 col-md-3 field-item">
                                                <input type="text" placeholder="" name="Passportnumber" ng-model="Passportnumber" />
                                                <span ng-show="submitted == true && customerform.Passportnumber.$error.required" class="color">Required</span>
                                            </div>


                                            <div class="row-fluid">
                                                <div class="col-sm-3 col-md-3">
                                                    <label class="required-field">AMOUNT PAID:<span class="asterisc" style="color:red">*</span> </label>
                                                </div>
                                                <div class="col-sm-3 col-md-3 field-item">
                                                    <select ng-model="CustomerDetail.CourrencyList" ng-options="Currency.CODE for Currency in currencystatus" name="CurrencyList" style="width:23%; color:green;" required>
                                                        <option value="">$</option>
                                                    </select>
                                                    <input type="text" placeholder="" name="Amountpaid" ng-model="Amountpaid" required style="width:49%; font-size: 15px; color:green;" />
                                                    <span ng-show="submitted == true && customerform.Amountpaid.$error.required" class="color">Required</span>
                                                </div>
                                            </div><br />
                                            <div class="row row-fluid">

                                                <div class="col-sm-3 col-md-3">
                                                    <label>PAYMENT TYPE :<span class="asterisc" style="color:red">*</span> </label>
                                                </div>
                                                <div class="col-sm-3 col-md-3" style="MARGIN-LEFT: 46px;">
                                                    <div class="col-sm-4 col-md-4" style="padding:0;MARGIN-RIGHT: 18px;">
                                                        <label class="col-sm-6 col-md-6" style="padding:0;"> CARD</label><input type="radio" class="col-sm-6 col-md-6" name="airbag-radio" />
                                                    </div>
                                                    <div class="col-sm-4 col-md-4" style="padding:0;">
                                                        <label class="col-sm-6 col-md-6" style="padding:0;">CASH</label><input type="radio" class="col-sm-6 col-md-6" name="airbag-radio" />
                                                    </div>
                                                </div>
                                                <div class="col-sm-3 col-md-3" style="margin-left: -44px;
    margin-right: -16px;">
                                                    <label class="required-field">CREATE DATE:<span class="asterisc" style="color:red">*</span> </label>
                                                </div>
                                                <div class="col-sm-3 col-md-3 field-item">
                                                    <input type="date" name="Createdate" ng-model="Createdate" style="line-height: 23px;" required>

                                                    <span ng-show="submitted == true && customerform.Createdate.$error.required" class="color">Required</span>
                                                </div>

                                            </div>

                                            <div class="row row-fluid">


                                                <div class="col-sm-3 col-md-3">
                                                    <label>PAYMENT STATUS <span class="asterisc" style="color:red">*</span> </label>
                                                </div>
                                                <div class="col-sm-3 col-md-3 field-item">
                                                    <select ng-model="CustomerDetail.paymentstatus" ng-options="Payment.NAME for Payment in Paymentstatus" name="PaymentStatusList" required>
                                                        <option value="">--SELECT--</option>

                                                    </select>
                                                    <span ng-show="submitted == true && customerform.PaymentStatusList.$error.required" class="color">Required</span>
                                                </div>
                                            </div>


                                            <div class="row-fluid">
                                                <input type="button" href="#bookdetails" class="custom-button pull-left" value="Back" data-toggle="tab" ng-click="TabShow('bookdetails')">
                                            </div>
                                            <div class="upload-btn-wrapper" align="right">
                                                <input type="file" name="myfile" class="custom-button" style="font-size :13px;
                                                           opacity: 1;" />
                                                <input type="button" class="custom-button" value="Submit" align="right">
                                            </div>


                                        </div>

                                    </div>
                                </div>




                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </section>



    <!-- Call to action Start -->
    <section id="call-to-action">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <h2>We design delightful digital experiences.</h2>
                        <p>Read more about what we do and our philosophy of design. Judge for yourself The work and results we’ve achieved for other clients, and meet our highly experienced Team who just love to design.</p>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- footer Start -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="footer-manu">

                    </div>
                    <p>Copyright &copy; Crafted by <a href="https://dcrazed.com/">SoftNice</a>.</p>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>

<script src="~/AngularControllers/MasterCtrl.js"></script>
<script src="~/AngularControllers/BookCtrl.js"></script>