    <style>
        body {
            font-family: "Open Sans Condensed", sans-serif;
            font-size: 14px;
            line-height: 1.42857143;
            color: black;
        }

        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #ddd;
        }

        th, td {
            border: 1px solid grey;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }

        #wraper-availability {
            margin: auto;
            width: 30%;
            float: left;
            border: 1px solid white;
            border-radius: 5px;
        }

        .availability-box {
            background-color: #eeddff;
            padding: 15px;
            width:120%;
            

        }

        vr {
            display: inline-block;
            width: 1px;
            background-color: lightgrey;
            margin-left: 7%;
            margin-right: 1%;
            height: 300px;
        }

        #table-wraper {
          
            display: inline-block;
            width:61%;
            margin-left:3px;
            margin-right: 3px;
            
        }

        .box {
            background-color: #eeddff;
            padding: 15px;
            overflow-x: auto;
        }

        .section-header {
            padding: 10px 10px;
            background-color: #1db954;
            color: white;
            font-weight: 500;
            margin-bottom: 15px;
            letter-spacing: 2px;
            font-size: 17px;
        }

        .for-header {
            padding: 5px 10px;
            background-color: lightgrey;
            font-weight: 400;
            letter-spacing: 1px;
            font-size: 15px;
            width:408px;
        }

        .for-header1 {
            padding: 5px 10px;
            background-color: lightgrey;
            font-weight: 400;
            letter-spacing: 1px;
            font-size: 15px;
            width: 695px;
        }

        .row-fluid {
            margin: 5px 0;
        }

        .row-fluid label {
            margin-right: 5px;
            letter-spacing: 1px;
            width: 100px;
        }

        .row-fluid select {
            width: 50%;
        }

        .row-fluid input[type=date] {
            width: 50%;
            height: 23px;
        }

        .custom-button {
            padding: 5px 25px;
            margin: 4px 2px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            background-color: #1db954;
            color: white;
            border: 2px solid #1db954;
            border-radius: 5px;
            letter-spacing: 1px;
        }

        .custom-button:hover {
            background-color: lightgrey;
            color:black;
        }
        .color{
            color:red;
        }
    </style>
</head>
<body ng-controller="OrdersCtrl">
    <!-- Header Start -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- header Nav Start -->
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>



                                <img src="~/Content/mytemplate/img/logo.png" />

                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav navbar-right">

                                    <li>@Html.ActionLink("Filters", "Landing")</li>
                                    <li>@Html.ActionLink("Book a Car", "Book")</li>
                                    <li>@Html.ActionLink("Logout", "Login")</li>

                                </ul>
                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->
                    </nav>
                </div>
            </div>
        </div>
    </header><!-- header close -->

    <form name="ordersform" ng-submit="ordersform.$valid && add()" novalidate>
        <section id="contact-form" class="container">
            <div class="section-header">
                ORDERS
            </div>
            <div id="wraper-availability">
                <div class="for-header">
                    SELECT FEATURES
                </div>
                <div class="availability-box">
                    <div class="row-fluid">
                        <label>CLASS:</label>
                        <select name="Carclass" ng-model="Schedule.CarClass" ng-options="carclass.ID as carclass.Name for carclass in ClassList" required>
                            <option value="">--Select--</option>
                        </select>
                        <span ng-show="submitted == true && ordersform.Carclass.$error.required" class="color">Please select</span>
                    </div>

                    <div class="row-fluid">
                        <label>FUEL:</label>
                        <select name="CarFuel" ng-model="class2" ng-options="fuellist.ID as fuellist.Name for fuellist in FuelList"  required>
                            <option value="">--Select--</option>
                        </select>
                        <span ng-show="submitted == true && ordersform.CarFuel.$error.required" class="color">Please select</span>
                    </div>
        
                    <div class="row-fluid">
                        <label> DURATION:</label>
                        <select name="CarDuration" ng-model="class3" ng-options="durationlist.ID as durationlist.Name for durationlist in DurationList" required>
                            <option value="">--Select--</option>
                        </select>
                        <span ng-show="submitted == true && ordersform.CarDuration.$error.required" class="color">Please select</span>                     
                    </div>

                    <div class="row-fluid">
                        <label>  PICK UP:</label>
                        <select name="CarPickup" ng-model="class4" ng-options="pickuplist.ID as pickuplist.Name for pickuplist in PickupList " required>
                            <option value="">--Select--</option>
                        </select>
                        <span ng-show="submitted == true && ordersform.CarPickup.$error.required" class="color"> Please select </span>
                    </div>

                    <div class="row-fluid">
                        <label for="">FROM :</label>
                        <input class="datepicker" ng-model="class5" type="date" name="dateofbirth" required>
                        <span ng-show="submitted == true && ordersform.dateofbirth.$error.required" class="color">Please select</span><br>
                        <label for="">TO :</label>
                        <input class="datepicker" ng-model="class6" type="date" name="dateofbirthto" required>
                        <span ng-show="submitted == true && ordersform.dateofbirthto.$error.required" class="color" >Please select</span>
                    </div>

                    <div class="row-fluid">
                        TYPE:
                        <label ng-repeat= "cartype in TypeList " > 
                        <input type="radio" name="CarType" ng-model="class7" ng-value=""/> {{cartype}}</label>
                    </div>
                    
                    <div class="row-fluid" align="center">
                        <input type="submit" class="custom-button" value="Submit" ng-click="submitted=true"/>
                        <input type="button" class="custom-button" value="ESTIMATE" ng-click="submitted=true"/>
                    </div>
                </div>
            </div>
            <vr></vr>
            <div id="table-wraper" >
                <div class="for-header1">
                    CARS AVAILABLE
                </div>
                <div class="box">
                    <table style="width:100%">
